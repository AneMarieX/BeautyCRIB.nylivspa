<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="900dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="1dp">


        <CalendarView
            android:id="@+id/calendarView"
            style="@android:style/Widget.DeviceDefault.Light.CalendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:dateTextAppearance="@style/TextAppearance.AppCompat.Small"
            android:firstDayOfWeek="@android:integer/config_shortAnimTime"
            android:minDate="01/01/2020" />

    </LinearLayout>
</RelativeLayout>
